<CreationScreen>:
    name: 'creation_screen'
    MDBoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            id: top_bar
            title: app.translator.t('create_card_title') # ИЗМЕНЕНО
            left_action_items: [["arrow-left", lambda x: setattr(root.manager, 'current', 'deck_list')]]
        ScrollView:
            MDBoxLayout:
                orientation: 'vertical'
                adaptive_height: True
                spacing: "12dp"
                padding: "24dp"
                MDBoxLayout:
                    orientation: 'horizontal'
                    adaptive_height: True
                    spacing: "8dp"
                    MDTextField:
                        id: full_sentence_field
                        hint_text: app.translator.t('full_sentence_hint') # ИЗМЕНЕНО
                        mode: "fill"
                        size_hint_x: 0.9
                    MDIconButton:
                        icon: "clipboard-arrow-down-outline"
                        on_release: root.paste_from_clipboard()
                        pos_hint: {"center_y": 0.5}
                MDTextField:
                    id: keyword_field
                    hint_text: app.translator.t('keyword_hint') # ИЗМЕНЕНО
                    mode: "fill"
                MDRaisedButton:
                    id: enrich_button
                    text: app.translator.t('enrich_button') # ИЗМЕНЕНО
                    on_release: root.enrich_button_pressed()
                    pos_hint: {"center_x": 0.5}