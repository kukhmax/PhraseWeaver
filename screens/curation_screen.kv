<CurationScreen>:
    name: 'curation_screen'
    MDBoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            title: app.translator.t('curation_title')
            left_action_items: [["arrow-left", lambda x: setattr(root.manager, 'current', 'creation_screen')]]
        MDBoxLayout:
            orientation: 'vertical'
            padding: "16dp"
            spacing: "16dp"
            MDCard:
                size_hint_y: None
                height: "200dp"
                Image:
                    id: image_preview
                    source: 'assets/tmp/placeholder.png'
                    allow_stretch: True
            MDLabel:
                text: app.translator.t('found_examples')
                halign: "center"
                font_style: "H6"
                size_hint_y: None
                height: self.texture_size[1]
            ScrollView:
                MDList:
                    id: examples_list
            MDRaisedButton:
                text: app.translator.t('add_selected_button')
                pos_hint: {"center_x": 0.5}
                on_release: root.save_curated_items()